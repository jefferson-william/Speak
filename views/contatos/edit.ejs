<% include ../header %>

<section class="container">
	<div class="row">
		<div class="col-xs-12">
			<div class="page-header">
				<h1>Editar contato</h1>
			</div>
		</div>
	</div>
</section>

<section class="container">
	<div class="row">
		<div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4">
			<form action="/contato/<%- contato._id %>/?_method=put" method="post" role="form">
				<fieldset>
					<div class="form-group">
						<input type="text" class="form-control" name="contato[nome]" value="<%- contato.nome %>" placeholder="Nome" autofocus>
					</div>
					<div class="form-group">
						<input type="text" class="form-control" name="contato[email]" value="<%- contato.email %>" placeholder="E-mail">
					</div>
					<div class="form-group">
						<button type="submit" class="btn btn-primary"><i class="glyphicon glyphicon-edit"></i> Editar</button>
					</div>
				</fieldset>
			</form>
		</div>
	</div>
</section>

<% include ../footer %>
